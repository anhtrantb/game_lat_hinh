<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cute_background"
    tools:context=".ManHinhChinh">

    <Button
        android:id="@+id/btnMotNguoiChoi"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="#FBC02D"
        android:text="Một người chơi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnHaiNguoiChoi"
        android:layout_width="158dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="#2FD102"
        android:text="Hai người chơi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMotNguoiChoi" />

    <ImageView
        android:id="@+id/back1"
        android:layout_width="81dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/sound1"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/sound1"
        android:layout_width="59dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sound" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="295dp"
        android:layout_height="109dp"

        android:layout_marginTop="156dp"
        android:text="Game lật thẻ vui nhộn "
        android:textAlignment="center"
        android:textColor="#E40E0E"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>